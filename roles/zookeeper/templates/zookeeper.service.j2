[Unit]
Description=Apache Zookeeper
Documentation=http://zookeeper.apache.org
Requires=network.target
After=network.target

[Service]
Type=forking
User={{ zk_user }}
Group={{ zk_group }}
WorkingDirectory={{ zk_path }}
SyslogIdentifier=zookeeper
ExecStart={{ zk_path }}/bin/zkServer.sh start
ExecStop={{ zk_path }}/bin/zkServer.sh stop
ExecReload={{ zk_path }}/bin/zkServer.sh restart
TimeoutSec=30
Restart=on-failure

[Install]
WantedBy=multi-user.target
Alias=zookeeper.service